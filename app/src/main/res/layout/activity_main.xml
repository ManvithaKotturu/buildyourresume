<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Resume"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:textColor="#1565C0" />

        <!-- Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:padding="12dp" />

        <!-- Title Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your job title"
            android:inputType="text"
            android:padding="12dp" />

        <!-- Contact Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_contact"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your email, phone number, address, etc."
            android:inputType="textMultiLine"
            android:padding="12dp" />

        <!-- Education Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_education"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your educational background"
            android:inputType="textMultiLine"
            android:padding="12dp" />

        <!-- Skills Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_skills"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your technical and soft skills"
            android:inputType="textMultiLine"
            android:padding="12dp" />

        <!-- Experience Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Experience"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_experience"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your work experience"
            android:inputType="textMultiLine"
            android:padding="12dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Resume"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:backgroundTint="#1565C0"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
